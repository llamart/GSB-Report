{% extends "layout.html.twig"%}
{% set practitionerMenu = true %}

{%block title %}Praticiens {%endblock%}

{%block content %}
    <h2 class="text-center">{{block('title')}}</h2>
    {% if practitioners%}
        <div class="table-responsive">
            <table class="table table-hover table-condensed">
                <thead>
                    <tr>
                        <th> Nom Praticien</th>
                        <th> Famille </th>
                    </tr>
                </thead>
                {%for practitioner in practitioners%}
                    <tr>
                        <td><a href="/practitioners/"{{practitioner.id}}>{{practitioner.name}} {{practitioner.first.name}}</a></td>
                        <td>{{practitioner.type.name}}</td>

                    </tr>
                {% endfor %}
            </table>
        </div>
    {% else %}
        <div class="alert alert-warning">Aucun praticien trouv√©.</div>
    {% endif %}
{% endblock %}


