{% extends "layout.html.twig" %}
{% set practitionerMenu = true %}

{% block title %}{{ practitioner.Name }} {{ practitioner.firstname }}{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
<div class="well">
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label class="col-sm-3 control-label">Famille</label>
            <div class="col-sm-9">
                <p class="form-control-static">{{ practitioner.type.name}}</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Nom </label>
            <div class="col-sm-9">
            <p class="form-control-static">{{ practitioner.Name}}</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Prénom </label>
            <div class="col-sm-9">
                <p class="form-control-static">{{ practitioner.firstname }}</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Adresse </label>
            <div class="col-sm-9">
                <p class="form-control-static">{{ practitioner.adress }}</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Code postale</label>
            <div class="col-sm-9">
                <p class="form-control-static">{{ practitioner.zipcode }}</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Ville </label>
            <div class="col-sm-9">
                <p class="form-control-static">{{ practitioner.city }}</p>
            </div>
        </div>
            <div class="form-group">
            <label class="col-sm-3 control-label">Notoriété </label>
            <div class="col-sm-9">
                <p class="form-control-static">{{ practitioner.coefficientnotoriety}}</p>
            </div>
        </div>
    </form>
</div>
{% endblock %}